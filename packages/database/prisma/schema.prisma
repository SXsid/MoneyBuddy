generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  number String @unique
  password String
  name String?
  balance Balance?
  transection Transection[]
}

model Balance{
  id  String @id @default(uuid())
  amount Int
  locked Int
  user User @relation(fields: [userId] ,references: [id] )
  userId String @unique
}

model Transection{
  id String @id @default(uuid())
  userId String 
  user User @relation(fields: [userId] , references: [id])
  token String @unique
  provider String
  amount Int
  status transStatus
  time DateTime
}

enum transStatus{
  success
  failed
  pending

}